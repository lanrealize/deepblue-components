/* components/album-cover/album-cover.wxss */

.album-cover-root {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 90vw;
}

.album-cover-main-root {
  margin-left: auto;
  font-size: 0;
  position: relative;
}

.album-cover-main-title{
  position: absolute;
  top: 0vh;
  left: 0vw;
  font-size: 16px;
  font-weight: bold;
  color: var(--font-color);
}

.album-cover-sub-title{
  position: absolute;
  top: 3.3vh;
  left: 0vw;
  font-size: 7.5px;
  color: black;
  width: 18VW;
}

.album-cover-location {
  position: absolute;
  top: 6.5vh;
  left: 0vw;
}

.album-cover-image {
  width: 70vw;
  height: 54vw;
  border-radius: 0.5rem;
}

.album-cover-title {
  width: 74vw;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  margin-left: auto;
  margin-bottom: 0.7vh;
  color: rgb(76, 98, 150);
}
.album-cover-description {
  font-size: 12px;
  height: 2vh;
  width: 75vw;
  margin-left: auto;
  align-items: center;
  justify-content: center;
  margin-top: 0.7vh;
}

.album-cover-logos {
  position: absolute;
  bottom: 1.5vh;
  left: 4vw;
  width: 15vw;
  height: 2vh;
  z-index: 1;
}

.album-cover-copyright {
  position: absolute;
  bottom: 0.5vh;
  right: 4vw;
  height: 3vh;
  line-height: 3vh;
  color: white;
  z-index: 1;
  font-size: 0.712vh;
}

.album-cover-black-bg {
  position: absolute;
  height: 3vh;
  width: 70vw;
  background-color: #303030;
  bottom: 0.6vh;
  left: 2vw;
  filter: blur(9px);
  opacity: 0.5;
}

.album-cover-amount-root {
  position: absolute;
  background-color: rgba(56, 56, 56, 0.2);
  top: 1.35vh;
  right: 1.5vh;
  height: 3vh;
  width: 6.3vh;
  border-radius: 5px;
}

.album-cover-amount-icon {
  position: relative;
  width: 2.4vh; 
  height: 2.4vh;
  top: 0.35vh;
  left: 0.6vh;
  opacity: 0.7;
}

.album-cover-amount-text {
  color: white;
  font-size: 1.8vh;
  position: absolute;
  top: 0.23vh;
  left: 3.5vh;
}

.album-cover-line {
  height: 1px;
  /* background-color: rgb(240, 240, 240); */
  margin: 2vh 2vh;
  width: 100vw;
}

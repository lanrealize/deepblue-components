/* components/album-cover/album-cover.wxss */

.album-cover-root {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 90vw;
}

.album-cover-main {
  margin-left: auto;
  font-size: 0;
}

.album-cover-image {
  width: 75vw;
  height: 25vh;
  border-radius: 0.5rem;
}

.album-cover-title {
  width: 74vw;
  margin-top: 1vh;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  margin-left: auto;
  margin-bottom: 0.7vh;
  color: var(--primary-color);
}
.album-cover-description {
  /* background-color: lightgray; */
  /* color: white; */
  font-size: 13px;
  height: 2vh;
  width: 74vw;
  margin-left: auto;
  align-items: center;
  justify-content: center;
  line-height: 2vh;
  margin-top: 0.7vh;
}